@model System.Collections.Generic.IEnumerable<ProductDemo.Data.Model.Category>
@{
    ViewBag.Title = "Kateqoriler";
}

<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Yeni Kategory","Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Duzenle", "Edit", new { id = item.CategoryId }) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.CategoryId }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.CategoryId }) 
            </td>
        </tr>
    }
</table>